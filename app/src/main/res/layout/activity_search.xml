<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/back_btn"
            style="@style/ImageButtonStyle"
            android:layout_gravity="center"
            android:src="@drawable/back_button"></ImageButton>

        <TextView style="@style/MessageTextStyle"
        android:drawablePadding="40dp"
        android:textSize="@dimen/buttonTextSize"
        android:layout_weight="0"
        android:textFontWeight="500"
        android:text="@string/search"
        android:layout_margin="20dp"
        android:fontFamily="@font/ys_display_medium">
    </TextView>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_margin="10sp"
        android:orientation="horizontal"
        android:background="@drawable/layout_bg">

        <EditText
            style="@style/EditTextStyle"
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:hint="@string/search"
            android:maxLines="1"
            app:drawableLeftCompat="@drawable/search"
            android:layout_gravity="left|center"
            android:drawablePadding = "10sp"></EditText>

        <ImageButton
            android:id="@+id/clear_btn"
            style="@style/ImageButtonStyle"
            android:layout_gravity="right|center"
            android:src="@drawable/clear_btn"
            android:layout_margin="10dp"
            android:visibility="invisible"
            app:tint="@color/black"></ImageButton>
    </FrameLayout>

</LinearLayout>