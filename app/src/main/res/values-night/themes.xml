<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="lightActivityBackground">@color/black</color>
    <color name="searchActivityBackground">@color/black</color>
    <color name="settingsBackground">@color/black</color>
    <color name="SW_Color">@color/SW_Dark_Color</color>
    <color name="LP_Color">@color/black</color>

    <style name="EditTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:textSize">@dimen/textViewTextSize</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">@integer/textViewTextWeight</item>
    </style>

    <style name="MessageTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:textSize">@dimen/textViewTextSize</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">@integer/textViewTextWeight</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">@integer/buttonTextWeight</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="DeleteImageButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="SearchIsEmptyImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/search_is_empty_dark</item>
    </style>

    <style name="SearchIsEmptyTextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TroubleWithConnectionImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/trouble_with_connection_dark</item>
    </style>

    <style name="TroubleWithConnectionTextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TroubleWithConnectionButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
</resources>